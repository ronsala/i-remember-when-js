<h1>Create a Memory of <%= @memory.event.name %></h1>
<br>
<%= form_with scope: :memory, url: event_memories_path do |f| %>
  <p><%= f.label :title %>: <%= f.text_field :title %></p><br>
  <p><%= f.label :"Your Memory" %>:<br><em>Recollections of the event from your point of view.</em><br>
  <%= f.text_area(:body, size: "125x8") %></p>
  <p><%= f.submit :Submit, class: "btn btn-outline-dark btn-sm" %></p>
<% end %>